### Aliases the requeres some scaling.
alias keepassxc "env QT_SCALE_FACTOR=2.00 keepassxc"
alias okular "env QT_SCALE_FACTOR=1.75 okular"
alias ida64 "env QT_SCALE_FACTOR=2.25 ida64"
alias wireshark "env QT_SCALE_FACTOR=2.25 wireshark"
alias spotify "spotify --force-device-scale-factor=2"
alias anki "env QT_SCALE_FACTOR=1.75 anki"
alias virtualbox "env QT_SCALE_FACTOR=2.00 virtualbox"
alias dolphin "env QT_SCALE_FACTOR=2.25 dolphin"

### Pacman alias.
alias pacman "pacman --color=auto"

### Other aliases.
alias etcher /opt/Etcher/etcher-electron
